extends layout

block content
	
	h1 Add Articles

	form(action="/articles/add", method="post")
		#form-group
			label(for="") Title
			input.form-control(name="title" type="text")
		#form-group
			label(for="") Author
			input.form-control(name="author" type="text")
		#form-group
			label(for="") Body
			textarea.form-control(name="body")
		input.btn.btn-primary(type="submit" value="Submit")
		